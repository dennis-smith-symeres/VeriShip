@using Microsoft.AspNetCore.Components.Authorization
@using VeriShip.Application.Common


<Menu MenuItems="@MenuItems"></Menu>



@code {


    [CascadingParameter] private Task<AuthenticationState>? AuthState { get; set; }
   
    private List<Menu.MenuItem> MenuItems { get; set; }

    private Menu.MenuItem SelectedMenuItem { get; set; }

    protected override async void OnInitialized()
    {
        var authState = await AuthState;

        var user = authState.User;
        MenuItems = new List<Menu.MenuItem>
        {
            new ()
            {
                Text = "Certifications",
                Url = "/"
            }
        };
        if (user.IsInRole(Roles.Officer) )
        {
            MenuItems.Add(new Menu.MenuItem
            {
                Text = "Settings",
                Url= "/settings"
            });
        }
     


        base.OnInitialized();
    }



 

}