@using Microsoft.AspNetCore.Components.Authorization
@using VeriShip.Application.Common


<Menu MenuItems="@MenuItems"></Menu>



@code {


    [CascadingParameter] private Task<AuthenticationState>? AuthState { get; set; }

    private List<Menu.MenuItem> MenuItems { get; set; } = [];

    private readonly Menu.MenuItem _menuSettings = new ()
    {
        Text = "Application settings",
        TelerikIcon = @FontIcon.Gear,
        Items = [
            new ()
            {
                Text = "QC specifications",
                Url = "/settings/qc-specifications"
            },
            new ()
            {
                Text = "Addresses",
                Url = "/settings/addresses"
            },
            new ()
            {
                Text = "Templates",
                Url = "/settings/templates"
            }
        ]
    };
   
    protected override async void OnInitialized()
    {
        try
        {
            if (AuthState == null) return;
            var authState = await AuthState;
            MenuItems = [];
            if (authState.User.IsInRole(Roles.Officer))
            {
                MenuItems.Add(_menuSettings);
            }
        }
        catch (Exception e)
        {
            Console.WriteLine(e);
         
        }
    }


}